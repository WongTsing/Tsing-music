<!--components/blog-ctrl/blog-ctrl.wxml-->
<view class="ctrl">
  <view class="ctrl-item" bind:tap="onComment">
    <i class="iconfont icon-pinglun icon"></i>
    <text>评论</text>
  </view>
  <view class="ctrl-item share">
    <i class="iconfont icon-fenxiang icon"></i>
    <text>分享</text>
  </view>
</view>

<x-login modalShow="{{loginShow}}"
         bind:loginsuccess="onLoginsuccess"
         bind:loginfail="onLoginfail"/>

<x-bottom-modal modalShow="{{modalShow}}">
  <form report-submit="true" slot="modal-content" bind:submit="onSend">
    <!-- <textarea name="content" bindinput="onInput" class="comment-content" placeholder="写评论内容"></textarea> -->
    <textarea name="content" class="comment-content" placeholder="写评论内容"></textarea>
    <!-- <button class="send" form-type="submit" bind:tap="onSend">发送</button> -->
    <button class="send" form-type="submit">发送</button>
  </form>
</x-bottom-modal>